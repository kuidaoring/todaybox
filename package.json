{
  "name": "todaybox",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run build:css && tsc",
    "build:css": "mkdir -p dist && tailwindcss -c ./tailwind.config.cjs -i ./src/tailwind.css -o ./dist/tailwind.css",
    "start": "env -u ELECTRON_RUN_AS_NODE electron .",
    "dev": "npm run build && npm run start",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.0",
    "@hono/zod-validator": "^0.7.6",
    "@js-temporal/polyfill": "^0.5.1",
    "hono": "^4.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.4.0",
    "vitest": "^2.0.5"
  }
}
